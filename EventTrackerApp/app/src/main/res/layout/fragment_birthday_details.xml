<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutsHolder">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topLayout"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:text="@string/birthday_until"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_bd_1"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_bd_name"
                android:textAlignment="center"
                tools:text="Osoba"
                android:textColor="@color/colorPrimaryDark"
                android:paddingTop="10dp"
                android:textSize="35dp" />

            <TextView
                android:text="@string/birthday_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_bd_2"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="@color/cardview_dark_background"
                android:paddingTop="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainLayout"
            android:paddingTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

            <ImageView
                android:layout_height="20dp"
                app:srcCompat="@drawable/thin_line"
                android:id="@+id/thin_line_1"
                android:layout_gravity="center"
                android:layout_width="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_timer_bd"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                tools:text="55:22:11"
                android:textColor="@color/colorAccent"
                android:textSize="50dp"
                android:textAllCaps="false"
                android:background="@color/cardview_shadow_end_color" />

            <ImageView
                android:layout_height="20dp"
                app:srcCompat="@drawable/thin_line"
                android:id="@+id/thin_line_2"
                android:layout_gravity="center"
                android:layout_width="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>